<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarePlus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Text input style -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        
        <!-- Set proper background color -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:colorBackgroundFloating">@color/surface_light</item>
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        
        <item name="android:navigationBarColor">@color/surface_light</item>
        
        <!-- Remove the transparent window settings -->
        <item name="android:windowIsTranslucent">false</item>
        
        <!-- Custom Styles -->
        <item name="materialButtonStyle">@style/Widget.CarePlus.Button</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.CarePlus.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Custom TextInputLayout Style -->
    <style name="Widget.CarePlus.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxBackgroundColor">#0DFFFFFF</item>
        <item name="android:textColorHint">@color/text_secondary_light</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <style name="Widget.CarePlus.TextInputLayout.Glassmorphism" parent="Widget.CarePlus.TextInputLayout">
        <item name="boxBackgroundColor">#00FFFFFF</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/primary</item>
    </style>

    <style name="Widget.CarePlus.Button.Glassmorphism" parent="Widget.CarePlus.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="rippleColor">#40FFFFFF</item>
    </style>
</resources>