<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarePlus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorAccent">@color/accent</item>
        
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:colorBackgroundFloating">@color/surface_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>
        
        <!-- Custom Styles -->
        <item name="materialButtonStyle">@style/Widget.CarePlus.Button</item>
        <item name="textInputStyle">@style/Widget.CarePlus.TextInputLayout</item>
    </style>

    <style name="Widget.CarePlus.TextInputLayout.Glassmorphism" parent="Widget.CarePlus.TextInputLayout">
        <item name="boxBackgroundColor">#26FFFFFF</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="android:alpha">0.9</item>
        <item name="hintTextColor">@color/surface_light</item>
    </style>

    <style name="Widget.CarePlus.Button.Glassmorphism" parent="Widget.CarePlus.Button">
        <item name="android:alpha">0.9</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
</resources>