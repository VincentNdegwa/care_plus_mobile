<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarePlus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorAccent">@color/accent</item>
        
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:colorBackgroundFloating">@color/surface_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>
        
        <!-- Make status bar icons light for dark theme -->
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Custom Styles -->
        <item name="materialButtonStyle">@style/Widget.CarePlus.Button</item>
        <item name="textInputStyle">@style/Widget.CarePlus.TextInputLayout</item>
    </style>

    <style name="Widget.CarePlus.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxBackgroundColor">#1A1A1A</item>
        <item name="android:textColorHint">@color/text_secondary_dark</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <style name="Widget.CarePlus.Button.Glassmorphism" parent="Widget.CarePlus.Button">
        <item name="android:alpha">0.9</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
</resources>